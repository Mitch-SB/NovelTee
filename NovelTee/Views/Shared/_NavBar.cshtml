<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href='@Url.Action("Index", "Home")' class="navbar-brand">
                <img src='@Url.Content("~/Content/Images/NTLogo.png")' />
            </a>
        </div>
@using NovelTee.Models;
        

        <div class="navbar-collapse collapse">
            
            <form class="navbar-form navbar-left" role="search">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search">
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>

            <ul class="nav navbar-nav navbar-right">
                <li>
                    @{
                        var cartLength = Session["cart"] as List<CartItems>;
                    }
                    @Html.ActionLink("Cart (" + (Session["cart"] != null ? cartLength.Count : 0) + ")", "Index", "Carts")
                    
                </li>
            </ul>

            @Html.Partial("_LoginPartial")
        </div>
    </div>
    <div class="container">
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav sub-nav">
                <li>
                    @if (User.IsInRole(RoleName.CanManageProducts))
                    {
                        @Html.ActionLink("Manage", "Index", "Products")
                    } else {
                        @Html.ActionLink("Browse", "Index", "Products")
                    }
                </li> 
                <li>@Html.ActionLink("Tees", "Tees", "Products")</li>
                <li>@Html.ActionLink("Tank Tees", "Tanks", "Products")</li>
                <li>@Html.ActionLink("Hood Tees", "Hoodies", "Products")</li>
            </ul>
        </div>
    </div>
</div>

