@model IEnumerable<NovelTee.Models.Product>

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int counter = 0;
}

<h2>Products</h2>

<!--TODO-->
<div class="body-content">
    <section class="sidebar">

    </section>

   

    <section class="container">
        @Html.ActionLink("Add New Product", "New", "Products", new { @class = "btn btn-primary" })
        <div class="row">
            @foreach (var product in Model)
            {
                if (counter != 0 && counter % 3 == 0)
                {
                    @:</div>
                    @:<div class="row">
                }

                <div id="products" class="col-lg-4 col-md-4 col-sm-4">
                    <div class="img-thumbnail">
                
                        <a href='@Url.Action("Product", "Products", new { id = product.Id}, null)'>
                            <img src='@Url.Content(product.ImagePath)' alt="DbGood" data-holder-rendered="true" style="height: 200px; width: 100%; display: block;" />
                        </a>                
                
                        <div class="caption">
                            <h4>@Html.ActionLink(product.Name, "Product", "Products", new { id = product.Id }, null)</h4>
                            <p>@product.Price</p>
                            <p>@product.Description</p>
                            <p>@Html.ActionLink("Edit", "Edit", "Products", new { id = product.Id }, null)</p>
                            <button data-product-id="@product.Id" class="btn-link js-delete">Delete</button>
                        </div>
                    </div>
                </div>

            counter++;
            }
        
        </div>
    </section>
</div>
<!--End TODO-->
<!--TODO on delete, cascade elements into proper row positions-->
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#products").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this product?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/products/" + button.attr("data-product-id"),
                            method: "DELETE",
                            success: function () {
                                button.closest("div#products").remove();
                            }
                        });
                    }
                });

            });

        });
    </script>
}