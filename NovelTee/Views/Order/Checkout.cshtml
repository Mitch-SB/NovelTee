@model NovelTee.ViewModels.OrderViewModel

<h4>Almost there! You are one step away from owning a sweet Tee!</h4>

<div class="row">
    <div class="col-lg-8 col-md-8">
        <h3>Shipping Info</h3>

        @using (Html.BeginForm("Checkout", "Order", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.ValidationSummary()

            <div>
                @Html.LabelFor(o => o.Order.FirstName)
                @Html.TextBoxFor(o => o.Order.FirstName, new { @class = "form-control" })
                @Html.ValidationMessageFor(o => o.Order.FirstName)
            </div>
            <div>
                @Html.LabelFor(o => o.Order.LastName)
                @Html.TextBoxFor(o => o.Order.LastName, new { @class = "form-control" })
                @Html.ValidationMessageFor(o => o.Order.LastName)
            </div>
            <div>
                @Html.LabelFor(o => o.Order.Address)
                @Html.TextBoxFor(o => o.Order.Address, new { @class = "form-control" })
                @Html.ValidationMessageFor(o => o.Order.Address)
            </div>
            <div>
                @Html.LabelFor(o => o.Order.City)
                @Html.TextBoxFor(o => o.Order.City, new { @class = "form-control" })
                @Html.ValidationMessageFor(o => o.Order.City)
            </div>
            <div>
                @Html.LabelFor(o => o.Order.State)
                @Html.DropDownListFor(o => o.Order.State, new SelectList(Enum.GetValues(typeof(NovelTee.ViewModels.State))), "Select State",
                    new { @class = "form-control" })
                @Html.ValidationMessageFor(o => o.Order.State)
            </div>
            <div>
                @Html.LabelFor(o => o.Order.ZipCode)
                @Html.TextBoxFor(o => o.Order.ZipCode, new { @class = "form-control" })
                @Html.ValidationMessageFor(o => o.Order.ZipCode)
            </div>
            <div>
                @Html.LabelFor(o => o.Order.PhoneNumber)
                @Html.TextBoxFor(o => o.Order.PhoneNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(o => o.Order.PhoneNumber)
            </div>
            <div>
                <div class="text-center">
                    <input type="submit" class="btn btn-primary" value="Complete Order" />
                </div>
            </div>
        }

    </div>
    <div class="col-lg-4 col-md-4">
        <div>
            <h3>Order Details</h3>
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <td>
                            Subtotal (@ViewData["CartQty"] Items)
                        </td>
                        <td>(@Model.CartTotal)</td>
                    </tr>
                    <tr>
                        <td>
                            Shipping
                        </td>
                        <td>Free</td>
                    </tr>
                    <tr>
                        <td>
                            Tax
                        </td>
                        <td>$0.00</td>
                    </tr>
                    <tr>
                        <td>
                            Total
                        </td>
                        <td>(@Model.CartTotal)</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div>
            <h3>Your Cart</h3>
            @{Html.RenderAction("ProductCard", "Order"); }
        </div>
    </div>
</div>


